/**index.wxss**/
page {
  background-color: #EEF1F7;
}

.My_bg {
  width: 750rpx;
  height: 313rpx;
  background: linear-gradient(0deg, rgba(85, 205, 216, 1) 0%, rgba(84, 175, 255, 1) 100%);
  position: relative;
}

.My_bg .My_info {
  width: 690rpx;
  height: 289rpx;
  background-color: #ffffff;
  position: absolute;
  top: 161rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
}

.My_bg .My_info .My_img {
  width: 116rpx;
  height: 116rpx;
  border: 3rpx solid #FFFFFF;
  position: absolute;
  top: -25%;
  left: 42%;
  border-radius: 50%;
}

.My_bg .My_info .My_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.My_bg .My_info .My_content {
  text-align: center;
  margin: auto;
}

.My_bg .My_info .My_content .userName {
  font-size: 30rpx;
  font-weight: 700;
}

.My_bg .My_info .My_content .My_lever {
  margin: 28rpx 0;
  font-size: 26rpx;
  color: #FFFFFF;
  background-color: red;
  width: 180rpx;
  height: 38rpx;
}

.My_btn {
  position: absolute;
  top: 170%;
  margin-left: 30rpx;
  text-align: center;
  color: #FFFFFF;
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(86deg, rgba(77, 211, 188, 1) 0%, rgba(107, 171, 250, 1) 100%);
  border-radius: 10rpx;
}