/* pages/cardInfo/cardInfo.wxss */
page{
  background-color:#EEF1F7;
}
.cardInfo {
  padding-top: 25rpx;
}
.card_data_info {
  width: 681rpx;
  height: 422rpx;
  border: 1rpx dashed #000000;
  padding: 75rpx 0 90rpx 102rpx;
  box-sizing: border-box;
  position: relative;
  margin: 0 auto;
}

/* 卡信息 */
.card_info {
  position: relative;
}
.card_info_TL {
  margin-right: 27rpx;
  width: 133rpx;
  height: 133rpx;
  padding: 7rpx 12rpx 17rpx 13rpx;
}
.background {
  width: 100%;
  height: 42%;
  top: 0;
  left: 0;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.card_info_TL image {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
}
.card_info_T {
  display: flex;
}
.address {
  font-size: 28rpx;
  color: #6D7279;
  margin-bottom: 16rpx;
}
.cardName {
  font-size: 23rpx;
  color: #6D7279;
  margin-bottom: 18rpx;
}
.cardTime {
  font-size: 25rpx;
  color: #6D7279;
}
.card_info_B {
  display: flex;
  margin-top: 40rpx;
}
.cardType{
  display: flex;
  flex-direction: column;
  margin-right: 67rpx;
}
.cardState{
  display: flex;
  flex-direction: column;
  margin-right: 87rpx;
}
.cardPrice{
  display: flex;
    flex-direction: column;
}
.textT{
  font-size: 34rpx;
  color: #6D7279;
  font-weight: 400;
  font-style: oblique;
  margin-bottom: 22rpx;
  text-align: center;
}
.textB{
  font-size: 23rpx;
  color: #6D7279;
  font-weight: 400;
  text-align: center;
}
/* 卡项权限 */
.card_power {
   padding: 35rpx 30rpx;
   background-color: #FFFFFF;
   margin: 20rpx 0;
}
.card_power_title {
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  margin-bottom: 36rpx;
}

.card_power_title_l {
  font-weight: 700;
  font-size: 35rpx;
}
.card_power_title_r {
  font-size: 26rpx;
}

.card_power_item {
  display: flex;
  background-color: #f2f0f3;
  box-sizing: border-box;
  margin-bottom: 19rpx;
  height: 150rpx;
}

.card_power_l image{
  width: 150rpx;
  height: 150rpx;
}
.card_power_r {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 18rpx;
}
.card_power_r text {
  /* margin-bottom: 17rpx; */
}
.card_power_r text:last-child{
  margin-bottom: none;
}
.text_fw{
  font-weight: 500;
  font-size: 28rpx;
  color: #2D2D2D;
}
.text_color{
  font-weight: 500;
  color: #848285;
  font-size: 28rpx;
}
/* 赠送 */
.card_set {
  padding: 35rpx 30rpx;
  background-color: #FFFFFF;
  margin: 20rpx 0;
}
.card_set_r {
  margin: 44rpx 0 37rpx 20rpx;
  display: flex;
  flex-direction: column;
}
.card_set_r text {
  margin-bottom: 17rpx;
}
.card_set_r text:last-child{
  margin-bottom: 0;
}
/* 交易记录 */
.card_record {
  padding: 35rpx 30rpx;
  background-color: #FFFFFF;
  margin: 20rpx 0 0;
}
.card_record_item {
  background-color: #eef1f7;
  padding: 30rpx 0 20rpx 0;
  margin-bottom: 15rpx;
}
.card_record_item_l {
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}
.card_record_item_l image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.card_record_item_r {
  width: 100%;
}
.card_record_item_r view {
  margin-bottom: 20rpx;
}
.recordName text{
  float: right;
  margin-right: 29rpx;
}
.card_record_item_top {
  display: flex;
}

.card_record_item_bottom {
  /* padding: 10rpx 25rpx; */
  margin: 20rpx 25rpx 0;
  font-size: 30rpx;
  color: #CCCCCC;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.card_record_item_bottom view{
  border: 1rpx solid #CCCCCC;
  margin-left: 10rpx;
  background-color: white;
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
}

.text_ft{
  font-size: 26rpx;
  color: #333333;
}
.text_cl{
  color: #ff3366;
  font-size: 26rpx;
  margin-left: 30rpx;
}



